<section class="container-fluid container-login-form">

  <section class="form-login">
    <h2 class="h2-styles">Welcome Back!</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: 'form-control custom-input-text' %>
      </div>

      <div class="form-group">
        <br />
        <%= f.password_field :password, autocomplete: "off", placeholder: "******", class: 'form-control custom-input-text' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group checkbox-container">
          <div class="">
            <%= f.check_box :remember_me, class: 'form-check-input' %>
          </div>
          <div class="">
            <%= f.label :remember_me %>
          </div>
        </div>
      <% end -%>

      <div class="form-group">
        <%= f.submit "Log in", class: 'btn btn-primary login-button' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </section>
</section>
