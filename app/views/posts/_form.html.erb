<section class="container-fluid general-form-container">
  <% if post.errors.any? %>
    <div id="error_explanation" class="validate-errors-alert">
      <!-- <h2 class="h2-styles h2-errors"><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2> -->
      <% post.errors.full_messages.each do |message| %>
        <p><%= message %></p>
      <% end %>
    </div>
  <% end %>
  <section class="post-form-container col-md-4 col-md-offset-4">
    <h1 class="h1-styles">Create New Overtime Request</h1>
    <%= form_with(model: post, local: true, class: 'general-form-styles') do |form| %>

      <div class="form-group">
        <%= form.label :date %>
        <%= form.date_field :date, id: :post_date, class: 'form-control custom-input-text-general' %>
      </div>

      <div class="form-group">
        <%= form.label :rationale %>
        <%= form.text_area :rationale, id: :post_rationale, class: 'form-control custom-input-text-general' %>
      </div>

      <%= render partial: 'status', locals: { form: form } if current_user.type == 'AdminUser' %>

      <div class="form-group">
        <%= form.submit "Save", class: 'btn btn-primary login-button' %>
      </div>
    <% end %>
  </section>
</section>
